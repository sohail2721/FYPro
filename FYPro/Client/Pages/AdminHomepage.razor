 @page "/AdminHomepage"
@using Microsoft.AspNetCore.Components.Authorization
@using FYPro.Shared
@inject AuthenticationStateProvider authstate
@inject HttpClient http
@inject IJSRuntime jsr
@inject NavigationManager Navigation
@inject NavigationManager NavigationManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Global styles */
        body {
            font-family: 'Segoe UI', sans-serif;
            font-size: 16px;
            line-height: 1.5;
            color: #333;
            background-color: #f8f8f8;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        ul {
            list-style: none;
        }

        /* Header */
        header {
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .header-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            justify-content: space-between;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        caption {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 0.5rem;
        }

        th {
            background-color: #0062cc;
            color: white;
            text-align: left;
        }

        td:first-child {
            font-weight: bold;
            width: 30%;
        }

        td:last-child {
            text-align: right;
        }
    </style>
</head>
<body>
    <section class="hero">
        <div class="hero-container">
            @if (AdminInfo.Any())
                {
                <h2>Welcome Back @AdminInfo[0].FirstName @AdminInfo[0].LastName!</h2>
                }
            <p>Explore your Projects, view deadlines, manage your meetings with the all new FYPro Portal.</p>

        </div>
    </section>

    <table>

        <tbody>
            <tr>
                <th colspan="2">Personal Information</th>
            </tr>
            @if (AdminInfo.Any())
                {
                <tr>
                    <td>Name:</td>
                    <td>@AdminInfo[0].FirstName @AdminInfo[0].LastName</td>
                </tr>


            <tr>
                <td>CNIC:</td>
                <td>@AdminInfo[0].CNIC</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>@AdminInfo[0].Email</td>
            </tr>
            <tr>
                <td>Date of Birth:</td>
             
                <td>@AdminInfo[0].DOB</td>
            </tr>

            
            
            <tr>

                <th colspan="2">Contact Information</th>
            </tr>

            <tr>
                <td>Phone Number:</td>
               
                <td>@AdminInfo[0].PhoneNumber</td>
            </tr>
            
            }
        </tbody>
    </table>

    <br />
    <footer>
        <div class="footer-container">
            <p>&copy; 2024 FYPro Portal. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>

@code{
    string currentUserName = string.Empty;
    List<AdminModel> AdminInfo = new List<AdminModel>();
    protected async override Task OnInitializedAsync()
    {
        var authstates = await authstate.GetAuthenticationStateAsync();
        currentUserName = authstates.User.Identity.Name;
        Console.WriteLine("UserName: " + currentUserName);
        AdminInfo = await http.GetFromJsonAsync<List<AdminModel>>($"api/Admin/GetAdminInfo/{currentUserName}");

    }
    }